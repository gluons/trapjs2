{
	"parserOptions": {
		"ecmaVersion": 7
	},
	"rules": {
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"off"
		],
		"semi": [
			"error",
			"always"
		],
		"no-unused-vars": [
			"warn"
		],
		"no-console": [
			"off"
		],
		"no-redeclare": [
			"warn"
		],
		"space-infix-ops": [
			"error",
			{
				"int32Hint": false
			}
		]
	},
	"env": {
		"browser": true,
		"es6": true,
		"amd": true,
		"node": true,
		"mocha": true
	},
	"extends": "eslint:recommended"
}
